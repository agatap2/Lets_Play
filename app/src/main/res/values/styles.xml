<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SmallTextViewBox" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/green_square</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GameCover" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <style name="GameDetailsText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
</resources>